.share_item{
  display: flex;
  margin-left: 0px;
  position: absolute;
  width: 100%;
  height: 40px;
  bottom: 5px;
  padding: 0;
  color: white;
  border: 0px solid red;
}
.share{
  font-size: 21px;
}
.btn{
  display:inline-block;
  width:auto!important;
  color:#ffffffb0;
}
/* 表单样式 */
.out{
  width: 165px;
  height: 135px;
  /*
  background: rgba(255,255,255,0.5);
  */
  position: absolute;
  top: 63%;
  left: 55%;
  transform: translate(-50%,-50%);
}
/*分割线样式*/
.divLine{
  background: #E0E3DA;
  width: 100%; 
  height: 3rpx;
  margin-top: 3px;
 }
 .txt3{
   font-size:12px;
 }

 
 .pic{
  width:100%;
  height:74%;
  position:absolute;
  top:114rpx;
  background-image:url('http://49.233.89.100/picture/1608738761579tmp_54fa7255bc04fe10ac00d5a21c8f5179c872cbd6d7190d28.jpg')
 }

 .text_set{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  color: rgb(54, 52, 52);
  font-size: 13px;
 }

 .swiper {
  height: 380rpx;
  width: 100%;
}
.swiper-item {
  height: 380rpx;
}
.slide-image{
  position: absolute;
  width: 100%;
  height: 280rpx;
  border-radius: 10rpx;
  z-index: 5;
  opacity: 0.5;
  top: 13%;
  
}
.active{
  opacity: 1;
  z-index: 10;
  height: 360rpx;
  top: 3%;
  transition:all .2s ease-in 0s;
}

.one-message{
  font-size: 13px;
  color: blue;
  margin-left: 5px;
}

.summary{
  display: flex;
  justify-content: center;
  color: red;
  font-size: 14px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
}

.divLine1{ 
  background: #d0d3cb;
  height:5px;
  margin: 7px 0;
}
/*内部分割线样式*/
.divLine2{ 
  background: #E0E3DA;
  height:1px;
  margin: 5px 0;
}