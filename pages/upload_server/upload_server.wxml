<!--/*********发布与输入栏***********/-->

  <textarea class='heading'  maxlength="12" placeholder="你丢了/捡到什么物品了呢~" bindinput ="get_title" value = '{{title}}' auto-height/>
  <view class="divLine1"></view>
  <textarea class='heading' maxlength="12" placeholder="丢失/捡到的时间" bindinput = 'get_time' value = '{{time}}' auto-height/>
  <view class="divLine1"></view>
  <textarea class='heading' maxlength="12" placeholder="丢失/捡到的地点" bindinput = 'get_pos' value = '{{position}}' auto-height/>
  <view class="divLine1"></view>
  <textarea class='text' maxlength="200" placeholder="描述一下物品的情况吧~（少于200字）" bindinput = 'get_describe'/>
